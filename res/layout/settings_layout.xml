<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<ScrollView
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 android:id="@+id/scroll"> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/seek_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seetoback"
        android:textSize="19dp" />

<SeekBar
        android:id="@+id/seek_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/seek_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seetofuture"
        android:textSize="19dp" />

<SeekBar
    android:id="@+id/seek_future"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    />


    <TextView
        android:id="@+id/othertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Настройки сохраняются автоматически."
        android:textSize="13dp" />
    
     <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Удалить это приложение" />
	<Button
        android:id="@+id/startbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Запустить сервис" />
	<Button
        android:id="@+id/stopbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Остановить сервис" />
        
</LinearLayout>
   </ScrollView>
    
</LinearLayout>